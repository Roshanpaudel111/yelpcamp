<% layout('layout/boilerplate') %>
</form>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6-offset-3">
    <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="post" novalidate class="validated-form">
      <div class="mb-2">
        <label class="form-label" for="title">Title: </label>
        <input
          class="form-control"
          value="<%= campground.title %>"
          type="text"
          name="title"
          id="title"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please fill out the valid title!!
        </div>
      </div>
      <div class="mb-2">
        <label class="form-label" for="location">Location</label>
        <input
          value="<%= campground.location %>"
          class="form-control"
          type="text"
          name="location"
          id="location"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please fill out the valid location!!
        </div>
      </div>
      <div class="mb-2">
        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            value="<%= campground.price %>"
            class="form-control"
            id="price"
            name="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Price cannot be empty!!
          </div>
        </div>
      </div>
      <div class="mb-2">
        <label for="image" class="form-label">Image Url</label>
        <input value="<%= campground.image %> " type="text" class="form-control" id="image" name="image" required />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please fill out the valid description!!
        </div>
      </div>
      <div class="mb-2">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="description"
          id="description"
          cols="30"
          rows="5"
          class="form-control"
          required
        ><%= campground.description %></textarea>
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please fill out the valid description!!
        </div>
      </div>
      <button class="btn btn-success my-3">Update Campground</button>
      <a class="btn btn-danger my-3" href="/Campgrounds/<%= campground.id %> ">Cancel</a>
    </form>
  </div>
</div>
