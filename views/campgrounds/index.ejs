<% layout('layout/boilerplate') %>

<h1 style="display: inline">All Campgrounds</h1>
<a href="/campgrounds/new">New Campground</a>
<ul>
  <% for (campground of campgrounds){ %>
  <li>
    <a href="/campgrounds/<%= campground._id %> "><%= campground.title %></a>
    <form
      style="display: inline"
      action="/campgrounds/<%= campground.id %>?_method=delete"
      method="post"
    >
      <button>Delete</button>
    </form>
  </li>
  <% } %>
</ul>
